@model Product

<h1>Delete Product</h1>

<h4>Are you sure you went to delete the product "@Model.Name"</h4>

<form asp-controller="Product" asp-action="DeleteConfirm" method="post">
    <input asp-for="Id" hidden/>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-3">Cancle</a>