@model Product

<h1>Edit Product</h1>
<form asp-controller="Product" asp-action="Edit" method="post">
    <div class="form-group">
        <label class="form-label" asp-for="Id">Id:</label>
        <input class="form-control" asp-for="Id" readonly/>
    </div>

    <div class="form-group">
        <label class="form-label mt-1" asp-for="Name">Name:</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="form-label mt-1" asp-for="Price">Price:</label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label class="form-label mt-1" asp-for="Description">Description:</label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label class="form-label mt-1" asp-for="Stock">Stock:</label>
        <input class="form-control" asp-for="Stock" />
        <span class="text-danger" asp-validation-for="Stock"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update</button>

</form>

<a class="btn btn-secondary mt-3" asp-controller="Product" asp-action="Index">Back To List</a>

