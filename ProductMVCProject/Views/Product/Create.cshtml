@model Product


<h1>Create Product</h1>
<form asp-controller="Product" asp-action="Create" method="post">

    <div class="form-group">
        <label class="form-label" asp-for="Name">Name:</label>
        <input class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Price">Price:</label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Description">Description:</label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Stock">Stock:</label>
        <input class="form-control" asp-for="Stock" />
        <span class="text-danger" asp-validation-for="Stock"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>

</form>

<a class="btn btn-secondary mt-3" asp-controller="Product" asp-action="Index">Back To List</a>
